{
  "name": "nuii-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -e .env.production -- node ./dist/src/index.js",
    "start:dev": "dotenv -e .env.development -- nodemon --files ./src/index.ts",
    "build": "npx prisma generate && tsc -p .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0",
    "setup:dev": "dotenv -e .env.development -- docker compose up -d",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev --schema ./prisma/schema.prisma",
    "migrate:prod": "dotenv -e .env.production -- npx prisma migrate deploy --schema ./prisma/schema.prisma",
    "seed:dev": "dotenv -e .env.development -- npx ts-node ./prisma/seeder/seeder.ts",
    "seed:prod": "dotenv -e .env.production -- npx ts-node ./prisma/seeder/seeder.ts",
    "studio:dev": "dotenv -e .env.development -- npx prisma studio",
    "studio:prod": "dotenv -e .env.production -- npx prisma studio",
    "build:docker": "dotenv -e .env -- docker compose up -d --build",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "nodemon": "^3.0.3",
    "prettier": "3.2.5",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@clerk/express": "^1.3.48",
    "@mapbox/polyline": "^1.2.1",
    "@prisma/client": "^5.9.1",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.4.4",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "geolib": "^3.3.4",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "nodemailer-mailgun-transport": "^2.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "src/**/*.ts": [
      "yarn format",
      "yarn lint"
    ]
  }
}
